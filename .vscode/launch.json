    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: samwich-cli with arguments",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/.venv/bin/samwich-cli",
            "cwd": "${command:pickArgs}",
            "console": "integratedTerminal",
            "args": [
              "--template-file=template.yml",
              "--debug"
            ]
        }
    ]
}
